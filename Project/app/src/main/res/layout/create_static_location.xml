<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Location"
        android:textSize="40dp"
        android:textFontWeight="@integer/google_play_services_version"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Please enter location!" />

    <EditText
        android:id="@+id/input_coorX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Coordinates x"
        android:textColor="#FF000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"/>

    <EditText
        android:id="@+id/input_coorY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="coordinate y"
        android:textColor="#FF000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"/>

    <Button
        android:id="@+id/btn_createLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"

        android:layout_marginRight="50dp"

        android:text="Create"
        android:angle="0"
        android:background="@drawable/gradient"
        android:onClick="create_Circle_Click"/>


</LinearLayout>