<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffffff">
    <TextView
        android:textColor="#000000"
        android:textSize="25dp"
        android:text="Add Location"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#000000"
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:background="#a6a7ab"
        android:id="@+id/edDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name of address..."
        android:textColorHint="#000000"
        android:textColor="#000000"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:text="Address: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:background="#a6a7ab"
        android:id="@+id/edDetailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter address..."
        android:textColor="#000000"
        android:textColorHint="#000000"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10">
        <LinearLayout
            android:layout_weight="5"
            android:weightSum="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:textColor="#000000"
                    android:layout_weight="0"
                    android:text="Time checkIn"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
                <TextView
                    android:id="@+id/tvDetailCheckin"
                    android:textAlignment="center"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_weight="0"
                    android:text="00:00"
                    android:layout_height="wrap_content"
                    android:layout_width="70dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/settingDetailCheckin"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/settings"
                android:scaleType="fitXY"/>
        </LinearLayout>


        <LinearLayout
            android:layout_weight="5"
            android:weightSum="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_weight="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:textColor="#000000"
                    android:layout_weight="0"
                    android:text="Time checkOut"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />
                <TextView
                    android:id="@+id/tvDetailCheckout"
                    android:textAlignment="center"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:layout_weight="0"
                    android:text="00:00"
                    android:layout_height="wrap_content"
                    android:layout_width="70dp" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/settingDetailCheckout"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/settings"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <Button
            android:id="@+id/btnDetailCancel"
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

        <Button
            android:id="@+id/btnDetailOK"
            android:text="OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <Button
            android:textAlignment="center"
            android:id="@+id/btnMoveCamera"
            android:text="Move camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>

        <Button
            android:textAlignment="center"
            android:id="@+id/btnDelete"
            android:text="Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>
    </LinearLayout>

</LinearLayout>
