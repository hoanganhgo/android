              <ListView
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="130dp"
            android:id="@+id/listCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>


        <ImageButton
            android:id="@+id/addCircle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/personal"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/add_button"
            android:onClick="create_Circle_Click"/>

        <ImageButton
            android:id="@+id/ib_menu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toRightOf="@+id/personal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/chat_button"
            android:scaleType="fitXY"
            android:background="@null"/>

        <ProgressBar
            android:id="@+id/progressBar_cyclic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:visibility="visible"
            android:indeterminateTint="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/personal"
            app:civ_border_color="@color/red"
            app:civ_border_width="2dp"
            android:onClick="personal_Click"/>

        <TextView
            android:id="@+id/label"
            android:layout_marginTop="100dp"
            android:textSize="50px"
            android:textAlignment="center"
            android:text="Your Circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

